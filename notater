-- Set active:
Set Appearance 30 Property "Color" "255, 0, 0, 1" "BackR" "255" "BackG" "0" "BackB" "0" "BackAlpha" "255"

-- Set inactive:
Set Appearance 30 Property "Color" "0, 0, 0, 1" "BackR" "255" "BackG" "0" "BackB" "0" "BackAlpha" "255"


